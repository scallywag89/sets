<div class="card" id="album">
  <div class="card-img" id="album-img" style="background-image:url(<%= stack_album.album[:cover_image_url] %>);">
		<div class="overlay">
			<div class="overlay-content">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#<%= stack_album.album[:title].gsub(/[!@%&0-9,\(\)\s+]/, "") %>">
          View Album
        </button>
			</div>
		</div>
	</div>

	<div class="card-content" id="album-content">
			<h2> <%= stack_album.album[:title] %> </h2>
      <small class="text-muted"> <%= stack_album.album[:artist] %> </small>
			<p> <%= stack_album.album[:year] %> </p>
	</div>
</div>

<%= render "shared/stack_modal", stack_album: stack_album %>
