<div class="layout">
  <input name="user-nav" type="radio" class="nav home-radio" id="home" checked="checked" />
  <div class="page home-page">
    <div class="page-contents mt-3">
      <h1 class="text-center">Trending DJ's</h1>
      <div class="container">
        <div class="user-cards">
          <% @users.shuffle.each do |user| %>
            <%= render 'shared/user_card', user: user %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <label class="user-nav" for="home">
    <span>
      Explore
    </span>
  </label>

  <input name="user-nav" type="radio" class="about-radio" id="about" />
  <div class="page about-page">
    <div class="page-contents">
      <h1>Following</h1>
      <p>This is where your followed DJs show up</p>
    </div>
  </div>
  <label class="user-nav" for="about">
    <span>
      Following
    </span>
    </label>
</div>
