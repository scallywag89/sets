<div class="dash-top">
  <div class="container pt-5 pb-3">
    <div class="row">
      <div class="col-md-12 text-center">
        <% if @user.avatar.attached? %>
          <%= cl_image_tag @user.avatar.key, class: "avatar-mega" %>
        <% else %>
          <%= image_tag "sets_logo.svg", class: "avatar-mega" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="container text-center">
    <h2><%= @user.nickname %></h2>
    <div class="m-3 mx-auto underline"></div>
    <p><%= @user.first_name %> <%= @user.last_name %></p>
    <p>Followers</p>
    <p>Member since... <%= @user.created_at %></p>
  </div>
</div>





<div class="dash-mid">
  <div class="container p-3">
    <h1>Stack</h1>
    <div class="dash-cards">
      <% if @stack.albums.empty? %>
        <p>Nothing in your Stack yet...</p>
      <% else %>
        <% @stack.albums.each do |album| %>
          <%= render 'shared/album_card', album: album %>
        <% end %>
      <% end %>
    </div>


    <h1>Sets</h1>
    <div class="dash-cards">
    <% if @user.setlists.empty? %>
      <p>No sets created yet...</p>
    <% else %>

    <% end %>
    </div>
  </div>
</div>
