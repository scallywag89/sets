<div class="modal fade" id="_<%= track[:spotify_id] %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= track[:name] %></h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= track[:artist] %>
      </div>
      <div class="modal-footer">
        <% if @setlists.empty? %>
          <%= link_to "Create a new set", new_setlist_path(track) %>
          <a href="" data-bs-dismiss="modal" style="color: red;">Back</a>

        <% else %>
          <%= simple_form_for [@setlist, @set_track] do |f| %>
            <%= f.input :setlist_id, collection: @setlists, selected: @setlists.first %>
            <%= f.hidden_field :track_id, value: track[:spotify_id] %>
            <%= f.submit 'Add to Set', class: "btn btn-outline-secondary", "data-bs-dismiss": "modal"  %>
          <% end %>
          <a href="" data-bs-dismiss="modal" style="color: red;">Back</a>
        <% end %>
      </div>
    </div>
  </div>
</div>
