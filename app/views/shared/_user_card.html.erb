<div class="user-card">
    <% if user.avatar.attached? %>
      <%= image_tag user.avatar, class: "avatar-mega" %>
    <% else %>
      <%= image_tag "sets_logo.svg", class: "avatar-mega" %>
    <% end %>
	<h3><%= user.nickname %></h3>
	<div class="btn-container">
		<a class="btn btn-success">
			Profile
		</a>
		<a class="btn btn-outline-info">
      Follow
		</a>
	</div>
  <div class="p-3">
    <p><%= user.favoritors.count %> followers</p>
      <%= link_to toggle_favorite_user_path(user), remote: true, method: :post do %>
        <%= render 'users/like_button', user: user %>
      <% end %>
  </div>
  <div>
    <p><% if user.setlists.exists? %>
          <% if user.setlists.count == 1 %>
            <%= user.setlists.count %> set</p>
          <% else %>
            <%= user.setlists.count %> sets</p>
          <% end %>
      <% else %>
        No sets created yet...
      <% end %>
  </div>
</div>
