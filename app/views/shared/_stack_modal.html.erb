<div class="modal fade" id="_<%= stack_album.album[:spotify_id] %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-6">
              <%= image_tag stack_album.album[:cover_image_url] || '', class: "album-img" %>
              <div class="pt-3">
                <h2><%= stack_album.album[:artist] %></h2>
                <h3><%= stack_album.album[:title] %></h3>
                <p><%= stack_album.album[:year] %></p>
              </div>
            </div>
            <div class="col-md-6 tracklist">
              <% (stack_album.album[:tracks].nil? ? stack_album.album.tracks : stack_album.album[:tracks]).each do |track| %>
                <p><%= track.name %></p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer mx-auto">
        <% if @stack.user_id == current_user.id %>
          <%= link_to "Delete", stack_album_path(stack_album), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
        <% else %>
          <a href="" data-bs-dismiss="modal" class="btn btn-outline-secondary">Back</a>
        <% end %>
      </div>
    </div>
  </div>
</div>
